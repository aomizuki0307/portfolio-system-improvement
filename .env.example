# ---------------------------------------------------------------------------
# Application Environment
# Copy this file to .env and fill in real values before running the app.
# NEVER commit .env to version control.
# ---------------------------------------------------------------------------

# PostgreSQL — matches the postgres service in docker-compose.yml
DATABASE_URL=postgresql+asyncpg://bloguser:blogpass@localhost:5433/blogdb

# Redis — matches the redis service in docker-compose.yml
REDIS_URL=redis://localhost:6380/0

# Runtime environment: development | staging | production
APP_ENV=development

# Set to false in production
DEBUG=true

# Generate a strong random key for production:
#   python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change-me-in-production
